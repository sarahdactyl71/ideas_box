<h1>Edit and Idea!</h1>
<%= form_for [@user, @idea] do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>
  <%= f.label :description %>
  <%= f.text_field :description %><br>
  <%= f.label :category %>
  <%= f.collection_select :category_id, Category.order(:name),:id,:name, include_blank: true %><br>
  <%= f.submit "Edit Idea" %>
<% end %>
